@using Ebusinesstemplate.Models;
@model List<Employee>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Employees</h4>
           <a asp-action="create" class="btn btn-success">Create Employee</a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                           
                            <th>
                                Image
                            </th>
                            <th>
                                FullName
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                               Settings
                            </th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(Employee employee in Model){
                        <tr>
                            <td>
                            <img src="~/assets/img/team/@employee.Image"/>
                            <td>
                               @employee.Name @employee.Surname
                            </td>
                            <td>
                                @employee.Position.Name
                            </td>
                            <td>
                                <a class="btn btn-warning" asp-action="update" asp-for="employee" asp-route-id="@employee.Id">Update</a>
                                    <a class="btn btn-secondary" asp-action="delete" asp-for="employee" asp-route-id="@employee.Id">Delete</a>
                                    <a class="btn btn-primary">Details</a>
                               
                            </td>
                            
                        </tr>
                       
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>